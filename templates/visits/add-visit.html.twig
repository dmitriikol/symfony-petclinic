{% extends "base.html.twig" %}

{% block body %}
    <h2>New Visit</h2>
    <div class="container">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Birth Data</th>
                <th scope="col">Type</th>
                <th scope="col">Owner</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th>{{ pet.name }}</th>
                <td>{{ pet.birthDate|date("m/d/Y") }}</td>
                <td>{{ pet.type }}</td>
                <td><a href="{{ path('owners_profile', {'id': owner.id}) }}">{{ owner.firstName }} {{ owner.lastName }}</a></td>
            </tr>
            </tbody>
        </table>

        <form method="post">
            <div class="form-group">
                <label for="date">Birth Date</label>
                <input type="date" class="form-control" id="date"  name="settings[birth-date]">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" rows="5" cols="100" name="settings[description]"></textarea>
            </div>
            <input type="hidden" name="submit" value="1">
            <button type="submit" class="btn btn-primary">Add Visit</button>
        </form>

        <h3>Previous Visits</h3>
        <table class="table">
            <thead>
            <tr>
                <th>Visit Date</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for visit in visits %}
            <tr>
                <th>{{ visit.visitDate|date("m/d/Y") }}</th>
                <td>{{ visit.description }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}